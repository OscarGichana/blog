with open("test.txt", "r") as file:
	cakes = file.readlines()
	for c in cakes:
		lines = c.split(" ")
		print(lines[0])

for l in lines:
  capital = lines[0].upper()
  print(capital)
l  = open("tst.txt", "w")
l.writelines(capital)
l.close()

