text_file = "test.txt"
output = ""

if (text_file[-1] == '.'):
    # remove the last period to avoid double periods in the last sentence
    text_file = text_file[:-1] 
data = text_file.split('. ') #Split the sentences

for line in data:
    a = line[0].capitalize() + line [1:] + '.'
    output = output + a
print (output)










